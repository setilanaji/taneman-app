<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ydh.botanic">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_leaf"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_leaf_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.activity.RegisterNewUserActivity">
        </activity>
        <activity android:name=".ui.activity.LoginUserActivity">

        </activity>
        <activity android:name=".ui.activity.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.ScannerActivity" />
        <activity android:name=".ui.activity.DetailPlantActivity" />
        <activity android:name=".ui.activity.DetailCategoryActivity" />
        <activity android:name=".ui.activity.PlantListActivity" />
        <activity android:name=".ui.activity.CategoryListActivity" />
        <activity android:name=".ui.activity.ChangePasswordActivity" />
        <activity android:name=".ui.activity.FavoriteActivity" />
        <activity android:name=".ui.activity.MainActivity">
        </activity>
        <activity android:name=".ui.activity.ResultSearchActivity">

        </activity>
    </application>

</manifest>